<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_corner"
        android:paddingVertical="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="logo"
                android:src="@drawable/white_icon_fullsize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:text="CollabTask"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="44sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Làm việc nhóm mọi lúc, mọi nơi."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="50dp">


        <Button
            android:id="@+id/login_w_gg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/secondary_light"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:drawablePadding="8dp"
            android:hint="Tiếp tục với Google"
            android:textColorHint="@color/other" />

    </LinearLayout>
</LinearLayout>
