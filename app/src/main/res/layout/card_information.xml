<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <ImageButton
        android:id="@+id/imageButtonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:contentDescription="@string/TEXT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chevron_left_24" />

    <TextView
        android:id="@+id/tvgroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/TEXT"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2menu"
        app:layout_constraintStart_toEndOf="@+id/imageButtonback"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvgroupdiscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/TEXT"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvgroup"
        app:layout_constraintStart_toEndOf="@+id/imageButtonback"
        app:layout_constraintTop_toBottomOf="@+id/tvgroup" />

    <ImageButton
        android:id="@+id/imageButton2menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/TEXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_24" />

    <View
        android:id="@+id/viewbuttongroup"
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:background="@color/backgroundMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgroupdiscription"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonthanhvien"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary"
        android:text="@string/TEXT3"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:icon="@drawable/groups_24"
        app:iconTint="@color/saffron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgroupdiscription" />

    <Button
        android:id="@+id/buttonthemtep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/primary"
        android:text="@string/TEXT4"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:icon="@drawable/attach_file_add_24"
        app:iconTint="@color/lavender"
        app:layout_constraintEnd_toEndOf="@+id/viewbuttongroup"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonthanhvien"
        app:layout_constraintTop_toBottomOf="@+id/tvgroupdiscription" />

    <Button
        android:id="@+id/buttonchuyendanhsach"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary"
        android:text="@string/TEXT5"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:icon="@drawable/move_group_24"
        app:iconTint="@color/azure"
        app:layout_constraintStart_toStartOf="@+id/viewbuttongroup"
        app:layout_constraintTop_toBottomOf="@+id/buttonthanhvien" />

    <TextView
        android:id="@+id/tvthemmota"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:hint="Thêm mô tả..."
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/TEXT"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/viewbuttongroup" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewbuttongroup"
        app:srcCompat="@drawable/notes_24" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvthemmota" />

</androidx.constraintlayout.widget.ConstraintLayout>